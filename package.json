{
  "name": "errors-to-telegram",
  "version": "0.0.1",
  "description": "Notify about JavaScript errors to custom telegram channel",
  "main": "./dist/index.js",
  "browser": "./dist/index.umd.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest -w",
    "dev": "run-p server watch",
    "server": "live-server ./demo",
    "start:browser": "open './demo/index.html'",
    "start:node": "yarn build:node && node ./demo/node.js",
    "prebuild": "rm -rf dist",
    "build": "run-p build:*",
    "build:node": "webpack --output-filename index.js",
    "build:node.min": "webpack --output-filename index.min.js -p",
    "build:umd": "BROWSER=true webpack --output-filename index.umd.js",
    "build:umd.min":
      "BROWSER=true webpack --output-filename index.umd.min.js -p",
    "prewatch": "rm -rf dist",
    "watch": "run-p watch:*",
    "watch:node": "npm run build:node -- -w",
    "watch:node.min": "npm run build:node.min -- -w",
    "watch:umd": "npm run build:umd -- -w",
    "watch:umd.min": "npm run build:umd.min -- -w"
  },
  "license": "MIT",
  "devDependencies": {
    "babel-core": "^6.23.1",
    "babel-loader": "^6.4.0",
    "babel-preset-env": "^1.6.1",
    "jest": "^19.0.2",
    "live-server": "^1.2.0",
    "npm-run-all": "^4.1.2",
    "webpack": "^2.2.1"
  }
}
