{
  "name": "telebug",
  "version": "0.0.3",
  "description": "Notify about JavaScript errors to custom telegram channel",
  "main": "./dist/index.js",
  "browser": "./dist/index.umd.js",
  "scripts": {
    "start": "run-p start:* watch",
    "start:browser": "live-server .",
    "start:node": "node ./demo.node.js",
    "watch": "run-p watch:*",
    "watch:node": "npm run build:node -- -w",
    "watch:umd": "npm run build:umd -- -w",
    "prebuild": "rm -rf dist",
    "build": "run-p build:*",
    "build:node": "webpack --output-filename index.js -p",
    "build:umd": "BROWSER=true webpack --output-filename index.umd.js -p",
    "test": "jest",
    "test:watch": "jest -w"
  },
  "license": "MIT",
  "devDependencies": {
    "babel-core": "^6.23.1",
    "babel-loader": "^6.4.0",
    "babel-preset-env": "^1.6.1",
    "jest": "^19.0.2",
    "live-server": "^1.2.0",
    "npm-run-all": "^4.1.2",
    "webpack": "^2.2.1"
  },
  "dependencies": {
    "ua-parser-js": "^0.7.17"
  }
}
